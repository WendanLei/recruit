@import "./../../../components/common/noData.wxss";
input,
textarea {
  font-size: 28rpx;
  color: #000;
}
.m-red {
  color: #F96969;
}
.my-team-container .tab-main {
  position: fixed;
  border-bottom: 2rpx solid #eee;
}
.my-team-container .tab-main .tab-view {
  width: 375rpx;
  float: left;
  background: #fff;
  height: 80rpx;
  line-height: 80rpx;
  cursor: pointer;
}
.my-team-container .tab-main .tab-view .tab-icon {
  display: block;
 /* width: 130rpx;*/
  margin: 0 auto;
  text-align: center;
  height: 78rpx;
  line-height: 78rpx;
  font-size: 28rpx;
  color: #5D677D;
  border-bottom: 4rpx solid transparent;
}
.my-team-container .tab-main .tab-view.active .tab-icon {
  color: #6698FF;
  border-bottom-color: #6698FF;
}
.my-team-container .tab-content {
  padding-top: 82rpx;
}
.my-team-container .invite-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 104rpx;
  background: #fff;
  padding: 10rpx 20rpx;
  border-bottom: 1rpx solid #e6e6e6;
}
.my-team-container .invite-item .avatar-view {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.my-team-container .invite-item .avatar-view .avatar {
  height: 60rpx;
  width: 60rpx;
  border-radius: 50%;
}
.my-team-container .invite-item .avatar-view .name {
  font-size: 28rpx;
  color: #5D677D;
  margin-left: 10rpx;
}
.my-team-container .invite-item .time {
  font-size: 24rpx;
  color: #5D677D;
}
.my-team-container .reward-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 104rpx;
  background: #fff;
  padding: 10rpx 20rpx;
  border-bottom: 1rpx solid #e6e6e6;
}
.my-team-container .reward-item .avatar-view {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.my-team-container .reward-item .avatar-view .avatar {
  height: 60rpx;
  width: 60rpx;
  border-radius: 50%;
}
.my-team-container .reward-item .avatar-view .detail {
  margin-left: 10rpx;
}
.my-team-container .reward-item .avatar-view .detail .name {
  font-size: 28rpx;
  color: #5D677D;
}
.my-team-container .reward-item .avatar-view .detail .address {
  font-size: 24rpx;
  color: #5D677D;
}
.my-team-container .reward-item .money {
  font-size: 28rpx;
  color: #F96969;
}
/* tab切换样式 */
.scoll-h{
  height: 100%;
}
.tab-h{
  width: 100%;
  box-sizing: border-box;
  line-height: 80rpx;
  background: #FAFAFA;
  display: flex;
  align-items: center;
 
}
.tab-item{
  width: 20%;
  display: inline-block;
  text-align: center;
  color: #9B9B9B;
  font-size:26rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  

}
.myteamTr{
  display: flex;
  align-items: center;
  background: #fff;
  border-bottom: 1px solid #E6E6E6;
}
.myteamCol{
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 20rpx;
  padding: 15rpx 0;
  line-height: 60rpx;
}
.myteamCol:nth-child(2),.tab-item:nth-child(2){
  width: 40%;
}
.myteamCol image{
  width: 43rpx;
  height: 43rpx;
  border-radius: 50%;
}
.myteamCol text{
  display: -webkit-box;
   word-break: break-all; /*允许对长单词进行拆分，并换行到下一行 */
    -webkit-box-orient: vertical;/*box-orient 属性规定框的子元素应该被水平或垂直排列*/
    -webkit-line-clamp:1;/*限制在一个块元素显示的文本的行数。*/
    overflow: hidden;
    text-overflow:ellipsis;
}
.invite{display: flex;width: 100%;align-items: center;font-size: 28rpx;color:#333;border-bottom: 1px solid #f3f3f3;}
.invite image{width:70rpx;height:70rpx;border-radius: 10rpx;margin:20rpx 40rpx 20rpx 0;}
.invite .text{display: inline-block;flex:1;text-align: left;}
.invite .icon{background: #ff5555;color:#fff;font-size:24rpx;width:40rpx;height:40rpx;line-height: 40rpx;text-align: center;display: inline-block;margin-left:30rpx;border-radius: 50%;}
.block {padding:0rpx 40rpx;}
.title{background: #e6e6e6;color: #666;text-align: center;font-size: 30rpx;line-height: 90rpx;}
.row{display: flex;align-items: center;border-bottom: 1px solid #f3f3f3;padding:20rpx 40rpx;font-size: 24rpx;}
.row .flex{flex:1;text-align: right;}
.row .col2{width:20%;text-align: center;}
.row .col3{width:30%;text-align: center;}
.row image{width:80rpx;height: 80rpx;border-radius: 50%;margin-right:20rpx;}
.headerRow{max-height:300rpx;overflow-y:auto;}