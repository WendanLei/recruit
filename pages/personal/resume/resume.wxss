/* pages/personal/resume/resume.wxss */
page{
  background: #f5f5f5;
}
.resume{
  margin: 20rpx 20rpx 0 20rpx;
  padding: 20rpx 0 0rpx 30rpx;
  display: flex;
  flex-direction: column;
  background: #fff;
}
.row{
  display: flex;
  align-items: stretch;
  font-size: 24rpx;
  margin-bottom: 20rpx;
   line-height: 40rpx;
}
.resume form{
  
  align-items: center;
}
.row .note{
  
  flex: 1;
  margin-right: 30rpx;
  background: #F2F2F2;
  padding:0 20rpx;
  height: 100%;
  
  
}
button,.button-hover {

  background-color: #fff;
  border-radius: 0;
  text-align: left;
  font-size: 24rpx;
  line-height: 40rpx;
  padding: 0;
  color: #5B5B5B;
  
}
 button::after{
  border: none;
}
.row image{
  width: 103rpx;
  height: 103rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}
.col{
  display: flex;
  flex-direction: column;
  align-content: flex-start;
  line-height: 40rpx;
  font-size: 20rpx;
}
.col:nth-child(2){
  flex: 1;
  text-align: left;
}
.col:last-child text, .col:last-child button{
  display: block;
  margin-bottom: 10rpx;
  padding:0 10rpx;
  background: #4C80F5;
  color: #fff;
  font-size: 24rpx;
  line-height: 40rpx;
}
.col:last-child .redName {
  background: #F96969;
}
.block{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.3);
  position: fixed;
  top: 0;
  left: 0;
}
.block .status{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
}
.block .status text{
  display: block;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  
}
.block .status .active{
  background: #E2EEFF;
}