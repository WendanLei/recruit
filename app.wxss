/*  重写 checkbox 样式  */
/* 未选中的 背景样式 */
checkbox {
    width: 100%; /* 背景的宽 */
   height: 140rpx; /* 背景的高 */
   opacity: 0;
   position: absolute;
   left: 0;
   top: 0;
}

.unCheck{

  width: 40rpx;
  height: 40rpx;
  background: #fff;
  display: inline-block;
  border: 1px solid #e3e3e3;
  padding: 0;
   line-height: 40rpx;
    text-align: center;

}
.activeChecked{
  background: #77CBF2;
   border: 1px solid #77CBF2;
   color: #fff;
   font-size: 32rpx;
  
  

}
